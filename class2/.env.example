# ======================== Environment Configuration ========================
# Copy this file to .env and fill in your details
# DO NOT commit this file to version control

# ======================== API Configuration ========================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
LOG_LEVEL=INFO

# ======================== Azure ML Configuration ========================
# These are optional - only needed if using Azure ML Model Registry

AZURE_ML_WORKSPACE=adas-ml-ws
AZURE_ML_RESOURCE_GROUP=adas-ml-rg
AZURE_ML_SUBSCRIPTION_ID=your-subscription-id-here

# Azure credentials (for authentication)
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_TENANT_ID=your-tenant-id

# ======================== Storage Configuration ========================

# Local model storage
LOCAL_MODEL_PATH=./models

# Azure Storage Account (optional)
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=
AZURE_STORAGE_CONTAINER=models

# ======================== Streamlit Configuration ========================

API_BASE_URL=http://localhost:8000
STREAMLIT_PORT=8501
STREAMLIT_SERVER_MAXUPLOADSIZE=200

# ======================== Docker Configuration ========================

# For Docker Compose
DOCKER_REGISTRY=your-registry.azurecr.io
DOCKER_IMAGE_TAG=latest

# Container Registry credentials
REGISTRY_USERNAME=
REGISTRY_PASSWORD=
REGISTRY_SERVER=

# ======================== Database Configuration (Optional) ========================
# For logging predictions to database

DB_HOST=localhost
DB_PORT=5432
DB_NAME=adas_predictions
DB_USER=postgres
DB_PASSWORD=

# ======================== Monitoring & Logging ========================

# Sentry (Error tracking)
SENTRY_DSN=

# Application Insights (Azure Monitoring)
APPINSIGHTS_INSTRUMENTATION_KEY=

# ======================== Security ========================

# API Key for authentication (if implementing API auth)
API_KEY=your-secret-api-key

# CORS allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# ======================== Model Configuration ========================

# Model version to serve
MODEL_VERSION=v1.0

# Canary deployment percentage (0-100)
CANARY_PERCENTAGE=30

# ======================== Feature Flags ========================

ENABLE_A_B_TESTING=true
ENABLE_MODEL_REGISTRY=false
ENABLE_LOGGING=true
ENABLE_METRICS=true
